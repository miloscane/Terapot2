<script>
	function openMenu(elem){
		if(elem.dataset.opened==1){
			//zatvori meni
			document.getElementById("menu-items").classList.remove("menuItemsActive");
			elem.classList.remove(elem.classList[0]+"Active");
			elem.dataset.opened = 0;
		}else{
			//Otvori meni
			elem.classList.add(elem.classList[0]+"Active");
			document.getElementById("menu-items").classList.add("menuItemsActive");
			elem.dataset.opened = 1;
		}
	}

	function checkIfItemExists(elem){
		var idToCheck = elem.href.split("#")[1];
		if(!document.getElementById(idToCheck)){
			window.location.href = "/#"+idToCheck
		}
	}
</script>